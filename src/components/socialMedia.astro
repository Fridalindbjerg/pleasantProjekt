---
const socials = [
  {
    name: "Instagram",
    url: "https://www.instagram.com/",
    icon: "/instagram.svg",
    bgColor: "#F9C7D0",
  },
  {
    name: "Facebook",
    url: "https://www.facebook.com/",
    icon: "/facebook-white.svg",
    bgColor: "#1877F2",
  },
  {
    name: "TikTok",
    url: "https://www.tiktok.com/",
    icon: "/tiktok-white.svg",
    bgColor: "black",
  },
];
---

<section class="social-media">
  <div class="grid-container">
    <div class="left">
      <h2>Følg med på vores sociale medier</h2>
      <div class="icon-column">
        {
          socials.map((social) => (
            <a href={social.url} target="_blank" rel="noopener noreferrer" aria-label={social.name} class="icon-wrapper" style={`background-color: ${social.bgColor};`}>
              <img src={social.icon} alt={social.name} />
            </a>
          ))
        }
      </div>
    </div>

    <div class="right">
      <div class="image-wrapper">
        <img src="/3xpleasant.JPG" alt="Tre personer" class="people-img" />
        <img src="/scribble.png" alt="Dekoration" class="scribble-overlay" />
      </div>
    </div>
  </div>
</section>

<style>
  .social-media {
    background-color: #f8f5ed;
    padding: 4rem 2rem;
    overflow-x: hidden;
    min-height: 100vh;
    margin-top: 5rem;
    margin-bottom: -8rem;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: stretch;
    justify-items: center;
    gap: 4rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .left,
  .right {
    height: 100%;
  }

  .left {
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2rem;
  }

  .social-media h2 {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
  }

  .icon-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-left: 10rem;
  }

  .icon-wrapper {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }

  .icon-wrapper img {
    width: 60px;
    height: 60px;
  }

  .icon-wrapper:hover {
    transform: scale(1.1);
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    max-width: 360px;
    margin: 0 auto;
  }

  .people-img {
    width: 100%;
    height: auto;
    position: relative;
    z-index: 2;
  }

  .scribble-overlay {
    position: absolute;
    top: -117px;
    left: -171px;
    width: 200%;
    z-index: 3;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .left {
      align-items: center;
      text-align: center;
    }

    .icon-column {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
      gap: 1rem;
      padding-left: 0;
    }

    .right {
      display: flex;
      justify-content: center;
    }

    .image-wrapper {
      max-width: 280px;
      margin: 0 auto;
      position: relative;
    }

    .scribble-overlay {
      top: -93px;
      left: -138px;
      width: 201%;
    }
  }
</style>
