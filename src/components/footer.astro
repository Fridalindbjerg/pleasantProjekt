  }

  .btns {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .btns a {
    color: white;
    font-weight: bold;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .btns a:hover {
    opacity: 0.8;
  }

  .btm {
    margin-top: 4rem;
  }

  .btm hr {
    border: none;
    border-top: 1px solid #666;
    margin-bottom: 1.5rem;
  }

  .logo {
    font-size: 2rem;
    font-weight: bold;
  }
</style>
