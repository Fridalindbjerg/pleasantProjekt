---
import "../../css/global.css";
import Layout from "../../layouts/Layout.astro";
import Pcard from "../../components/Pcard_list.astro";
import ProductGallery from "../../components/productGallery.astro";
import Banner from "../../components/Banner.astro";
export async function getStaticPaths() {
  const curl = "https://wgqakpwpodenybfzulqd.supabase.co/rest/v1/pleasant?select=*";

  const apikey = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6IndncWFrcHdwb2RlbnliZnp1bHFkIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDQ0Nzc5NDUsImV4cCI6MjA2MDA1Mzk0NX0.9tn-XzeWsFEhOnlITP1uv6_kteUJ4MXDjyl-ypKzzsI";

  const options = {
    headers: {
      apikey: apikey,
    },
  };

  const response = await fetch(curl, options);
  const data = await response.json();

  return data.map((post) => {
    return {
      params: { id: post.id },
      props: { post },
    };
  });
}

const { id } = Astro.params;
const { post } = Astro.props;
---

<Layout>
  <main>
    <div class="image-wrapper">
      <!-- <div class="max"> -->
      <section class="wiggley people-img">
        <div class="">
          <h1>{post.productname}</h1>
        </div>
        <img class="product_img" src={post.img1} alt="Produkt billede 1" />
        <div class="info">
          <p class="price">{post.price},00 DKK</p>
          <article>
            <div class="flex">
              <img class="symbol" src="/public/shirt.webp" alt="Symbol" />
              <p>Unik og komfortabel.</p>
            </div>
            <div class="flex">
              <img class="symbol" src="/public/recycled.webp" alt="Symbol" />
              <p>Minimal miljøpåvirkning.</p>
            </div>
            <div class="flex">
              <img class="symbol" src="/public/plant.webp" alt="Symbol" />
              <p>Mindre spild. Mere natur.</p>
            </div>
            <div class="flex">
              <img class="symbol" src="/public/check.webp" alt="Symbol" />
              <p>Dit valg gør en forskel.</p>
            </div>
          </article>
          <p class="size">Size:</p>
          <ul>{post.size.map((str) => <li>{str}</li>)}</ul>
          <button>Læg i kurv</button>
        </div>
      </section>
    </div>
    <img src="/wiggley.png" alt="Dekoration" class="scribble-overlay" />
  </main>

  <section class="top">
    <Banner />
  </section>
  <section>
    <h3>Prøv vores andre styles</h3>
    <div class="flex1">
      <div>
        <img src="https://pleasant.dk/cdn/shop/files/Shirts26.3_80.jpg?v=1744121342&width=1600" alt="" />
        <h2>Green street upcycled shirt</h2>
        <p>699,00 dkk</p>
      </div>
      <div>
        <img src="https://pleasant.dk/cdn/shop/files/shirts_20.2.25_21.jpg?v=1740408567&width=1600" alt="" />
        <h2>Flower blooming upcycled shirt</h2>
        <p>499,00 dkk</p>
      </div>
      <div class="displaynone">
        <img src="https://pleasant.dk/cdn/shop/files/upcycledcaps_tall54_main.jpg?v=1733905620&width=1600" alt="" />
        <h2>Rose couch potato upcycled cap</h2>
        <p>399,00 dkk</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .displaynone {
    display: none;
  }
  .ontop {
    position: relative;
    z-index: 4;
  }
  .max {
    width: 100%;
    height: auto;
    position: relative;
    z-index: 3;
  }
  .people-img {
    width: 60%;
    height: auto;
    position: relative;
    z-index: 3;
  }
  .image-wrapper {
    margin-top: 10%;
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
  }
  .scribble-overlay {
    /* transform: rotate(90deg); */
    position: absolute;
    top: 10rem;
    left: 11%;
    width: 84%;
    height: 159%;
    z-index: 1;
    pointer-events: none;
  }
  .top {
    margin-top: 20%;
    margin-bottom: 10%;
  }

  .flex1 {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5em;
  }
  img {
    max-width: 100%;
  }
  section div div h2 {
    margin: 0;
  }

  h2 {
    font-size: 1em;
    text-align: center;
  }

  h3 {
    text-align: center;
    font-size: 1.5em;
  }

  p,
  ul,
  li {
    font-family: Pleasant-paragraph;
    text-align: center;
  }

  h1 {
    font-size: 36px;
    margin: 10px;
  }

  ul {
    display: flex;
    flex-direction: row;
    padding-left: 0;
    padding-bottom: 10px;
  }

  li {
    list-style: none;
    border: 1.5px solid black;
    width: 100px;
    padding: 3px;
    text-align: center;
    margin: 5px;
  }

  body {
    background-color: rgb(243, 240, 232);
  }

  main {
    max-width: 90%;
    margin: auto;
    overflow: hidden;
  }

  button {
    border: none;
    background-color: rgb(136, 190, 172);
    font-family: Pleasant-paragraph;
    width: 90%;
    padding: 15px;
    border-radius: 25px;
    font-size: 1em;
    margin-right: 5%;
    margin-left: 5%;
  }

  .symbol {
    height: 20px;
    padding-right: 10px;
  }

  .product_img {
    width: 270px;
    position: relative;
    z-index: 0;
  }

  article {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    max-width: 250px;
  }

  .flex {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .product_img {
    justify-self: center;
  }

  .size {
    text-align: left;
    padding-top: 20px;
  }

  .info {
    margin-top: 50px;
  }

  @media (width >= 400px) {
    .wiggley {
      display: grid;
      grid-template-columns: 1fr 1fr;
      text-align: center;
    }

    h1,
    .product_img,
    h2,
    .price {
      grid-column: 1 / span 2;
    }
    article {
      grid-column: 1/2;
    }
    ul,
    .size {
      grid-column: 1/2;
    }

    button {
      grid-column: 1 / span 2;
    }

    .price {
      text-align: left;
    }
  }

  @media (width >= 550px) {
    h1 {
      font-size: 3em;
      grid-row: 1;
      z-index: 3;
    }

    .wiggley {
      z-index: 1;
    }
    .product_img {
      width: 400px;
      grid-row: 1 / span 2;
      z-index: 0;
    }

    h2 {
      font-size: 1.5em;
    }
  }

  @media (width >= 600px) {
    .scribble-overlay {
      height: 169%;
    }
  }

  @media (width >= 650px) {
    .scribble-overlay {
      height: 149%;
      top: 15rem;
    }

    .info {
      margin-top: 0;
    }
  }

  @media (width >= 800px) {
    .scribble-overlay {
      top: 11rem;
    }
  }

  @media (width >= 900px) {
    .displaynone {
      display: block;
    }
  }

  @media (width >= 900px) {
    .scribble-overlay {
      height: 112%;
      top: 6rem;
    }

    .product_img {
      grid-column: 1 /2;
      width: 460px;
    }

    .price {
      grid-column: 2 / 3;
      grid-row: 2 / 3;
    }

    .hidden {
      display: none;
    }

    article {
      grid-column: 2 / 3;
      grid-row: 2/ 3;
    }

    .info {
      margin-left: 20px;
    }
  }

  @media (width >= 1100px) {
    .info {
      margin-left: 100px;
    }
    h1 {
      font-size: 3.6em;
      text-align: center;
    }
    .top {
      margin-top: 10%;
    }
  }

  @media (width >= 1400px) {
    .info {
      margin-left: 200px;
    }
    .product_img {
      width: 500px;
    }
    .scribble-overlay {
      height: 140%;
      max-width: 1176.84px;
      max-height: 1150.45px;
    }
    main {
      max-width: 1400px;
    }
  }
</style>
